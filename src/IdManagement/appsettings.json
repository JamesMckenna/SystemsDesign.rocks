{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Settings.Configuration" ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": [
          {
            "expression": "(RequestPath, '/lib')"
          },
          {
            "expression": "(RequestPath, '/css')"
          },
          {
            "expression": "(RequestPath, '/js')"
          },
          {
            "expression": "(RequestPath, '/favicon.ico')"
          },
          {
            "expression": "(RequestPath, '/icon.jpg')"
          },
          {
            "expression": "(RequestPath, '/icon.png')"
          }
        ]
      }
    ],
    "MinimunLevel": {
      "Default": "Debug",
      "Override": {
        "IdentityServer4": "LogEventLevel.Information",
        "IdenityModel": "LogEventLevel.Information",
        "Microsoft": "LogEventLevel.Information",
        "System": "Warning",
        "Microsoft.AspNetCore": "LogEventLevel.Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "..\\Logs\\IdManagement\\IdManagement.json",
          "bufferSize": 500,
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "outTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "rollOnFileSizeLimit": true,
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information",
          "retainedFileCountLimit": 31,
          "fileSizeLimitBytes": null
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
